<div class="intro intro-single route bg-image" style="background-image: url({{ meta.image }})">
  <div class="overlay-mf"></div>
  <div class="intro-content display-table">
    <div class="table-cell">
    <h2 class="intro-title mb-4">{{ meta.title }}</h2>
    <p class="subtitle-a text-light">
      {{ meta.description }}
    </p>
    {% if breadcrumbs %}
    <ol class="breadcrumb d-flex justify-content-center">
      <li class="breadcrumb-item">
        <a href="{{ base_url }}">{{ pages['index'].meta.title }}</a>
      </li>
      {% set pathComponents = current_page.id|split('/')|slice(0, -1) %}
      {% for subPath in pathComponents %}
      {% set category = pathComponents|slice(loop.index0)|join('/') %}
      <li class="breadcrumb-item">
        <a href="{{ category|link }}">{{ pages[category].title }}</a>
      </li>
      {% endfor %}
      <li class="breadcrumb-item active">{{ meta.title }}</li>
    </ol>
    {% endif %}
    </div>
  </div>
</div>
