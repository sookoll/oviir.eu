<!DOCTYPE html>
<html lang="et">
<head>

  {% include 'parts/header.twig' %}

</head>

<body id="page-top">

  <!--/ Nav Start /-->
  {% include 'parts/menu.twig' %}
  <!--/ Nav End /-->

  <!--/ Intro Skew Start /-->
  <div id="home" class="intro route bg-image" style="background-image: url({{ meta.image }})">
    <div class="overlay-itro"></div>
    <div class="intro-content display-table">
      <div class="table-cell">
        <div class="container">
          <span>
            <img src="http://oviir.eu/miuview-api/?request=getimage&album=wp-pildid-sisusse&item=o-logo-transp.png&size=150&mode=longest">
          </span>
          <div class="intro-subtitle">
            <div class="d-flex justify-content-center">
              {% include 'parts/login.twig' %}
            </div>
          </div>
          <p class="pt-3">
            {{ content }}
          </p>
        </div>
      </div>
    </div>
  </div>
  <!--/ Intro Skew End /-->


  {% set tools = [] %}

  {% if user_has_right('editor/admin') %}
  {% set tools = tools|merge([
    { title: 'Muuda', type: 'edit', icon: 'icon ion-md-create', id: current_page.id }
  ]) %}
  {% endif %}

  {% include 'parts/footer.twig' with { tools: tools } %}

  {% include 'parts/scripts.twig' %}


</body>
</html>
